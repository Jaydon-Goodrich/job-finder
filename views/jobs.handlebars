<div class="search-box">
    <form>
        <label for="jobType">Job Type:</label>
        <input type="text" id="jobType" name="jobType" placeholder="Job Type">
        <label for="loc">Location</label>
        <input type="text" id="loc" name="loc" placeholder="Location">
        <button type="submit">Search</button>
    </form>
</div>

<div class="con-card">
    {{#each data}}
    <div class="job-card">
        <h4 class="card-title">{{this.title}}</h2>
            <h6 class="card-subtitle mb-2">{{this.company}}</h6>
            <h6 class="text-muted city-text">{{this.place}}</h6>

            <a href="{{this.link}}" target="_blank" class="card-link">Click Here to Apply</a>
    </div>
    {{/each}}
</div>